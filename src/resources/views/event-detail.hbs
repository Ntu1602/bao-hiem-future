    <div class="container">
      <div class="row">

        <div class="col-lg-6 col-12">

          <h1 class="text-white mb-4 pb-2">{{event.title}}</h1>

          <a href="#section_2" class="btn custom-btn smoothscroll me-3">Learn
            more</a>
        </div>

      </div>
    </div>

    <svg
      viewBox="0 0 1962 178"
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink"
    ><path
        fill="#ffffff"
        d="M 0 114 C 118.5 114 118.5 167 237 167 L 237 167 L 237 0 L 0 0 Z"
        stroke-width="0"
      ></path>
      <path
        fill="#ffffff"
        d="M 236 167 C 373 167 373 128 510 128 L 510 128 L 510 0 L 236 0 Z"
        stroke-width="0"
      ></path>
      <path
        fill="#ffffff"
        d="M 509 128 C 607 128 607 153 705 153 L 705 153 L 705 0 L 509 0 Z"
        stroke-width="0"
      ></path><path
        fill="#ffffff"
        d="M 704 153 C 812 153 812 113 920 113 L 920 113 L 920 0 L 704 0 Z"
        stroke-width="0"
      ></path><path
        fill="#ffffff"
        d="M 919 113 C 1048.5 113 1048.5 148 1178 148 L 1178 148 L 1178 0 L 919 0 Z"
        stroke-width="0"
      ></path><path
        fill="#ffffff"
        d="M 1177 148 C 1359.5 148 1359.5 129 1542 129 L 1542 129 L 1542 0 L 1177 0 Z"
        stroke-width="0"
      ></path><path
        fill="#ffffff"
        d="M 1541 129 C 1751.5 129 1751.5 138 1962 138 L 1962 138 L 1962 0 L 1541 0 Z"
        stroke-width="0"
      ></path></svg>
  </section>

  <section
    class="events-section events-detail-section section-padding"
    id="section_2"
  >
    <div class="container">
      <div class="row">
        <h2 class="mb-lg-5 mb-4">Sự kiện khám sức khoẻ miễn phí</h2>
        <div class="col-lg-10 col-md-8 col-12 mx-auto">
          <div>
            <div class="custom-block-image-wrap">
              <img
                src="/{{event.image}}"
                class="custom-block-image img-fluid"
                alt=""
                style="display: block; margin:0 auto;border-radius: 10px;"
              />
            </div>
          </div>
          <div>
            <div class="custom-block-info">
              <p>{{{event.content}}}</p>
              <div class="events-detail-info row my-5">
                <div class="col-lg-12 col-12">
                  <h4 class="mb-3">{{event.title}}</h4>
                </div>

                <div class="col-lg-4 col-12">
                  <span class="custom-block-span">Ngày:</span>

                  <p class="mb-0">{{getDate event.startAt}}</p>
                </div>

                <div class="col-lg-4 col-12 my-3 my-lg-0">
                  <span class="custom-block-span">Giờ:</span>

                  <p class="mb-0">{{getTime event.startAt}}</p>
                </div>

                <div class="col-lg-4 col-12">
                  <span class="custom-block-span">Vé:</span>

                  <p class="mb-0">{{event.ticket}}</p>
                </div>
              </div>

              <div class="contact-info mb-5">
                <div class="contact-info-item">
                  <div class="contact-info-body">
                    <strong>{{event.location}}</strong>

                    <p class="mt-2 mb-1">
                      <a href="tel: 010-020-0340" class="contact-link">
                        0906 295 930
                      </a>
                    </p>

                    <p class="mb-0">
                      <a href="mailto:info@company.com" class="contact-link">
                        info@company.com
                      </a>
                    </p>
                  </div>

                  <div class="contact-info-footer">
                    <a href="https://g.co/kgs/nUKCLjK" target="_blank">Google
                      Map</a>
                  </div>
                </div>

                <img src="images/WorldMap.svg" class="img-fluid" alt="" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row d-flex justify-content-center mt-5">
        <form
          action="form-event"
          method="post"
          class="custom-form contact-form col-6"
          role="form"
        >
          <h2 class="mb-4 pb-2">ĐĂNG KÝ NGAY</h2>

          <div class="row">
            <div class="col-lg-6 col-md-6 col-12">
              <div class="form-floating">
                <input
                  type="text"
                  name="name"
                  id="full-name"
                  class="form-control"
                  placeholder="Họ và tên"
                  required=""
                />

                <label for="floatingInput">Họ và tên</label>
              </div>
            </div>

            <div class="col-lg-6 col-md-6 col-12">
              <div class="form-floating">
                <input
                  type="text"
                  name="phone"
                  id="phone-number"
                  pattern="[0-9]+"
                  class="form-control"
                  placeholder="Số điện thoại"
                  required=""
                />

                <label for="floatingInput">Số điện thoại</label>
              </div>
            </div>

            <div class="col-lg-12 col-md-6 col-12">
              <div class="form-floating">
                <input
                  type="email"
                  name="mail"
                  id="email"
                  pattern="[^ @]*@[^ @]*"
                  class="form-control"
                  placeholder="Địa chỉ Email"
                />

                <label for="floatingInput">Địa chỉ Email</label>
              </div>
            </div>

            <div class="col-lg-12 col-12">
              <div class="form-floating">
                <textarea
                  class="form-control"
                  id="message"
                  name="note"
                  placeholder="Để lại lời nhắn ở đây"
                ></textarea>

                <label for="floatingTextarea">Tin nhắn</label>
              </div>

              <button type="submit" class="form-control">Gửi</button>
            </div>
          </div>
        </form>
      </div>

    </div>
  </section>
</main>