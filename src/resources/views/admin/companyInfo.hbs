<div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-12">
        <div class="card shadow-lg">
          <div class="card-body p-4">

            <!-- Logo -->
            <div class="text-center mb-4">
              <img src="https://via.placeholder.com/100x100?text=Logo" alt="Logo" class="img-fluid rounded-circle">
              <h4 class="mt-3">Chỉnh sửa thông tin công ty</h4>
            </div>

            <!-- Form -->
            <form action="/admin/formCompanyInfo" method="POST">
              <div class="mb-3">
                <label for="name" class="form-label">Tên công ty</label>
                <input type="text" class="form-control" id="name" name="name" value="{{companyInfo.name}}" required>
                <input type="hidden" class="form-control" id="name" name="_id" value="{{companyInfo._id}}">
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="mail" value="{{companyInfo.mail}}" required>
              </div>

              <div class="mb-3">
                <label for="phone" class="form-label">Số điện thoại</label>
                <input type="tel" class="form-control" id="phone" name="phone" value="{{companyInfo.phone}}" required>
              </div>

              <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ</label>
                <textarea class="form-control" id="address" name="address" rows="2" required>{{companyInfo.address}}</textarea>
              </div>

              <div class="mb-3">
                <label for="mapLink" class="form-label">Link địa chỉ (Google Maps)</label>
                <input type="url" class="form-control" id="mapLink" name="mapLink" value="{{companyInfo.mapLink}}" placeholder="https://maps.google.com/...">
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Lưu thông tin</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>